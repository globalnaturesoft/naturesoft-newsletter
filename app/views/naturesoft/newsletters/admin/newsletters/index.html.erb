<% title t(:newsletters) %>
<form class="listing-form">
  
	<div class="panel panel-flat">
		<div class="panel-body filter-box">                
			<div class="row">
				<div class="col-md-4">
						<div class="form-group">
								<label><%= t(:sort_by) %></label>
								<%= select_tag(:sort_by, options_for_select(Naturesoft::Newsletters::Newsletter.sort_by, :selected => params[:sort_by]), class: "select2") %>
						</div>
				</div>
				<div class="col-md-4">
						<div class="form-group">
								<label><%= t(:sort_order) %></label>
								<%= select_tag(:sort_orders, options_for_select(Naturesoft::Newsletters::Newsletter.sort_orders, :selected => params[:sort_orders]), class: "select2") %>
						</div>
				</div>
				<div class="col-md-4">
					<div class="form-group has-feedback">
						<label><%= t(:search) %></label>
						<input type="text" name="keyword" class="form-control" placeholder="Enter search(email)..." value="<%= params[:keyword] %>">
						<div class="form-control-feedback">
							<i class="icon-search4 text-size-base"></i>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
			
	<div class="btn-group list_actions mb-10 hide">
			<button type="button" class="btn btn-xs btn-info dropdown-toggle" data-toggle="dropdown">
					Actions <span class="caret"></span>
			</button>
			<ul class="dropdown-menu">											
					<li>
							<a href="" data-href="<%= naturesoft_newsletters.delete_admin_newsletters_path %>" data-confirm="Are you sure!" data-method="DELETE">
									<i class="icon-enter"></i> Delete
							</a>
					</li>            
			</ul>
	</div>
	
	<!-- Basic datatable -->
	<div class="panel panel-flat">
		<div class="table-container">
			<table class="table table-striped">
				<thead>
					<tr class="bg-teal-800">
						<th width="1%" class="check_all_list">
								<input type="checkbox" class="styled">
						</th>
						<th><%= t(:email) %></th>
						<th><%= t(:created_at) %></th>
						<th class="text-right"><%= t(:actions) %></th>
					</tr>
				</thead>
				<tbody>
					<% @newsletters.each do |item| %>
						<tr>
							<td width="1%">
									<input type="checkbox" class="node styled"
											name="ids[]"
											value="<%= item.id %>"
									/>
							</td>
							<td class="kq_search"><%= item.email %></td>
							<td><%= item.created_at.strftime("%d/%m/%Y") %></td>
							<td class="text-right">
							  <div class="btn-group">
									<%= link_to '<i class="icon-pencil"></i>'.html_safe, naturesoft_newsletters.edit_admin_newsletter_path(item), class: "btn bg-teal-400 btn-icon" %>
									<button type="button" class="btn bg-teal-400 dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><span class="caret"></span></button>
									<ul class="dropdown-menu dropdown-menu-right">
										<li>
											<%= link_to '<i class="glyphicon glyphicon-trash"></i>'.html_safe + t(:delete), naturesoft_newsletters.admin_newsletter_path(item), method: :delete, data: { confirm: 'Are you sure?' } , class: "backend_delete_item" %>
										</li>
									</ul>
								</div>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
			<div class="dataTables_wrapper no-footer">
				<div class="datatable-footer showed">
					<div class="dataTables_info" ><%= page_entries_info @newsletters %></div>
					<div class="dataTables_paginate paging_simple_numbers">
						<%= will_paginate @newsletters, previous_label: '←', next_label: '→', renderer: BootstrapPagination::Rails %>
					</div>
				</div>
			</div>
		
		</div>
	</div>
	<!-- /basic datatable -->
</form>